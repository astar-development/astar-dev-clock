<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:c="clr-namespace:AStar.Dev.Clock.Controls"
        x:Class="AStar.Dev.Clock.MainWindow"
        Icon="avares://AStar.Dev.Clock/Assets/astar.ico"
        Width="400" Height="450"
        Title="AStar Development Clock">

    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="File">
                <MenuItem Header="Settings">
                    <MenuItem Header="Theme">
                        <MenuItem Header="Light" Click="OnLightModeSelected" />
                        <MenuItem Header="Dark" Click="OnDarkModeSelected" />
                        <MenuItem Header="Auto" Click="OnAutoModeSelected" />
                    </MenuItem>
                    <MenuItem Header="Numerals">
                        <MenuItem Header="Arabic" Click="OnArabicNumeralsSelected" />
                        <MenuItem Header="Roman" Click="OnRomanNumeralsSelected" />
                        <MenuItem Header="None" Click="OnNoNumeralsSelected" />
                    </MenuItem>
                </MenuItem>
                <MenuItem Header="Close" Click="OnClose" />
            </MenuItem>
        </Menu>
        <Border Margin="8" CornerRadius="12" Padding="12">
            <c:AnalogClockControl x:Name="Clock" />
        </Border>
    </DockPanel>

</Window>