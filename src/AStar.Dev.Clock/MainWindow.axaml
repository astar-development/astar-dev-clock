<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:c="clr-namespace:AStar.Dev.Clock.Controls"
        x:Class="AStar.Dev.Clock.MainWindow"
        Icon="avares://AStar.Dev.Clock/Assets/astar.ico"
        Width="400" Height="450"
        Title="AStar Development Clock">

  <DockPanel>
    <Menu DockPanel.Dock="Top">
      <MenuItem Header="Settings">
        <MenuItem Header="Theme">
          <MenuItem Header="Light" Click="OnLight" />
          <MenuItem Header="Dark" Click="OnDark" />
          <MenuItem Header="Auto" Click="OnAuto" />
        </MenuItem>
        <MenuItem Header="Numerals">
          <MenuItem Header="Arabic" Click="OnArabicNumerals" />
          <MenuItem Header="Roman" Click="OnRomanNumerals" />
          <MenuItem Header="None" Click="OnNoNumerals" />
        </MenuItem>
      </MenuItem>
      <MenuItem Header="Close" Click="OnClose" />
    </Menu>
    <Border Margin="8" CornerRadius="12" Padding="12">
      <c:AnalogClockControl x:Name="Clock" />
    </Border>
  </DockPanel>

</Window>
